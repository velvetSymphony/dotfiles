{
    // "json.trace.server": "verbose",
    // "markdown.trace.server": "verbose",
    // "pyright.trace.server": "verbose",
    // "xml.trace.server": "verbose",
    // "yaml.trace.server": "verbose",
    "suggest.autoTrigger": "always",
    "coc.preferences.enableLinkedEditing": true,
    "coc.preferences.enableMessageDialog": true,
    "coc.preferences.extensionUpdateCheck": "daily",
    "coc.preferences.formatOnSave": true,
    "coc.preferences.formatOnType": true,
    "coc.preferences.useQuickfixForLocations": true,
    "coc.preferences.willSaveHandlerTimeout": 1000,
    "coc.source.file.ignoreHidden": false,
    "codeLens.enable": true,
    "codeLens.position": "eol",
    "colors.enable": true,
    "diagnostic.checkCurrentLine": true,
    "diagnostic.floatConfig": {
        "border": true,
        "rounded": false
    },
    "diagnostic.format": "%message [%source]",
    "diagnostic.separateRelatedInformationAsDiagnostics": true,
    "diagnostic.virtualText": true,
    "links.highlight": true,
    "links.tooltip": true,
    "list.insertMappings": {
        "<C-c>": "do:exit",
        "<C-n>": "do:previewdown",
        "<C-p>": "do:previewup"
    },
    "list.normalMappings": {
        "<C-c>": "do:exit",
        "<C-n>": "do:previewdown",
        "<C-p>": "do:previewup"
    },
    "languageserver": {
        "bash": {
            "command": "bash-language-server",
            "args": [
                "start"
            ],
            "filetypes": [
                "sh"
            ],
            "ignoredRootPaths": [
                "~"
            ]
        },
        "ruff-lsp": {
            "command": "ruff-lsp",
            "filetypes": [
                "python"
            ]
        },
        "lua": {
            "command": "lua-lsp",
            "filetypes": [
                "lua"
            ]
        }
    },
    "pyright.organizeimports.provider": "pyright",
    "python.analysis.diagnosticMode": "workspace",
    "python.analysis.stubPath": "~/src/python-type-stubs",
    "python.formatting.provider": "ruff",
    "python.linting.enabled": true
}
